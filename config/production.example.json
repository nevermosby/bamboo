{
  "Marathon": {
    "Endpoint": "http://192.168.53.10:8080"
  },

  "Bamboo": {
    "Endpoint": "http://192.168.53.1:8000",
    "Name": "http",
    "Zookeeper": {
      "Host": "192.168.53.10:2181",
      "Path": "/bamboo",
      "ReportingDelay": 5
    }
  },

  "HAProxy": {
    "TemplatePath": "config/haproxy_template.cfg",
    "OutputPath": "haproxy/haproxy.cfg",
    "ReloadCommand": "haproxy -f haproxy/haproxy.cfg -p haproxy/haproxy.pid -D -sf $(cat haproxy/haproxy.pid)",
    "ReloadValidationCommand": "haproxy -c -f {{.}}"
  },

  "StatsD": {
    "Enabled": false,
    "Host": "localhost:8125",
    "Prefix": "bamboo-server.development."
  }
}
